<div class="container125">
 <div class="row">
   <div class="col-md-3"></div>

   <div class="col-md-6">
 	<h3 class="editing">Editing Book</h3>
　　<%=form_for(@book)do|f| %>

　　　<% if @book.errors.any? %>
  　　　<div class="alert alert-warning">
    　　<ul>
    	　<div>There is an error.</div>
     　　<% @book.errors.full_messages.each do |message| %>
        　<li><%= message %></li>
      　　<% end %>
    </ul>
  </div>
<% end %>

　　<h4 class="dora">Title</h4>
　　<%=f.text_field :title,class:"btn-block" %>
    
    <h4 class="dora1">Opinion</h4>
　　<%=f.text_area :body,class:"btn-block" %>
　　<div><%=f.submit "Update Book", class: "btn btn-primary btn-block" %></div>
　　<%=link_to "Show" ,book_path(@book.id) %>
　　|
　　<%=link_to "Back" ,books_path %>
   <% end %>
  </div>

  <div class="col-md-3"></div>
 </div>
</div>

