<div class="container28">
	<div class="row">
		<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<% if @user_or_book == "2" %>
			<h3>Books search for "<%=@search %>"</h3>
			<table class="table table-hover table-invrese">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%=link_to user_path(book.user.id) do %>
							<%=attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td>
							<%=link_to book.title, book_path(book.id) %>
						</td>
						<td>
							<%=book.body %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>

			<% elsif @user_or_book == "1" %>
			<h3>Users search for "<%=@search %>"</h3>
			<table class="table table-hover table-invrese">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td>
							<%=attachment_image_tag user, :profile_image, size: "40x40",
							format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %>
						</td>
						<td>
							<%=user.name %>
						</td>
						<td>
							<%=link_to "Show" ,user_path(user.id) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<% else %>

			<p>存在しません</p>
			<% end %>
		</div>
		<div class="col-xs-1"></div>
	</div>
</div>